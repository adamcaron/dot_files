alias la="l -a"


# stuff I misspell
alias shh="ssh"
alias eit="exit"


# fancy ls command
# -l  long format
# -F  / after dirs, * after exe, @ after symlink
# -G  colorize
# -g suppress owner
# -o suppress group
# -h humanize sizes
# -q print nongraphic chars as question marks
alias l="ls -lFGgohq"


# cd and l the thing you cd'ed into
function c(){
  cd $1 && l
}


# easy cd ../../.. alias
function ..(){
  cd ../$1/$2/$3
}


# clone a repo and cd into it
function clone(){
  git clone $1 && cd $(basename ${1%.*})
}

# call "push" in terminal to automatically push the current branch
function push {
  git push -u origin $(parse_git_branch)
}

# easy push dot files
function updatedotfiles {
  cp ~/.vimrc ~/repositories/dot_files/vimrc
  cp ~/.gitignore_global ~/repositories/dot_files/gitignore_global
  cp ~/.bash_profile ~/repositories/dot_files/bash_profile
  cp ~/.aliases.bash ~/repositories/dot_files/aliases_bash
  cd ~/repositories/dot_files
  ga .
  gcm "updated dot files"
  push
  cd
}
